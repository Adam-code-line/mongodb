<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="UTF-8">
    <title>记账本</title>
    <style>
        body {
            background: #f9f9f9;
            margin: 0;
            font-family: "微软雅黑", Arial, sans-serif;
        }
        .container {
            max-width: 900px;
            margin: 0 auto;
            padding: 0 20px;
        }
        .header {
            text-align: center;
            font-size: 48px;
            margin-top: 20px;
            margin-bottom: 40px;
            font-weight: 400;
            letter-spacing: 2px;
        }
        .record-list {
            margin-top: 20px;
        }
        .record {
            background: #fff;
            border-radius: 4px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
            margin-bottom: 20px;
            border: 1px solid #e0e0e0;
            padding: 0;
            overflow: hidden;
        }
        .record-header {
            padding: 16px 24px 0 24px;
            font-size: 20px;
            font-weight: 500;
        }
        .record-content {
            padding: 12px 24px 16px 24px;
            font-size: 18px;
            color: #333;
        }
        .record-footer {
            display: flex;
            align-items: center;
            justify-content: flex-end;
            padding: 0 24px 16px 24px;
            font-size: 18px;
        }
        .tag {
            display: inline-block;
            padding: 2px 16px;
            border-radius: 4px;
            font-size: 16px;
            color: #fff;
            margin-right: 16px;
        }
        .tag-expense {
            background: #f7bebe;
            color: #a94442;
            border: 1px solid #f7bebe;
        }
        .tag-income {
            background: #7ed97e;
            color: #226622;
            border: 1px solid #7ed97e;
        }
        .record.expense {
            background: #f7eaea;
        }
        .record.income {
            background: #eaf7ea;
        }
        .amount {
            margin-left: 16px;
            font-weight: 500;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">记账本</div>
        <div style="text-align:right; margin-bottom: 20px;">
            <a href="/account/create" style="display:inline-block; background:#409eff; color:#fff; padding:8px 24px; border-radius:4px; text-decoration:none; font-size:18px;">新增记录</a>
        </div>
        <div class="record-list">

            <% accounts.forEach(item => { %>
            <div class="record <%= item.type === -1 ?'expense':'income' %>">
                <div class="record-header" style="color:#a94442;"><%= monment(item.date).format('YYYY-MM-DD') %></div>
                <div class="record-content"><%= item.item %></div>
                <div class="record-footer">
                    <span class="tag <%= item.type === -1 ?'tag-expense':'tag-income' %>"><%= item.type === '-1'?'支出':'收入' %></span>
                    <span class="amount" style="color:#a94442;"><%= item.amount %> 元</span>
                    <!-- 删除按钮 -->
                    <form action="/account/<%= item._id %>" method="get" style="display:inline;margin-left:20px;">
                        <button class="delbtn" type="submit" style="background:#ff4d4f;color:#fff;border:none;padding:6px 18px;border-radius:4px;cursor:pointer;font-size:16px;">删除</button>
                    </form>
                </div>
            </div>
            <% }); %>
        </div>
    </div>

    <script>
        // 确认删除操作
        document.querySelectorAll('.delbtn').forEach(button => {
            button.addEventListener('click', function(event) {
                if (!confirm('确定要删除这条记录吗？')) {
                    event.preventDefault();
                }
            });
        });
    </script>
</body>
</html>